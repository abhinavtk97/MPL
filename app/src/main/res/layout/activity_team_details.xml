<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TeamDetails">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Details"
        android:gravity="center"
        android:textAppearance="@style/cardHeadTitle"
        android:textColor="#000000"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        android:id="@+id/dinkcard"
        android:transitionName="iconteam"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:src="@drawable/dink"
                android:id="@+id/teamimg"
                android:layout_height="150dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/teamnamerole"
                android:layout_margin="10dp"
                android:text="Club De Dinkan"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

